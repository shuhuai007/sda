
<workflow-app xmlns="uri:oozie:workflow:0.2" name="java-main-wf">
    <start to="java-node"/>
    <action name="java-node">
        <java>
            <job-tracker>${jobTracker}</job-tracker>
            <name-node>${nameNode}</name-node>
            <configuration>
                <property>
                    <name>mapred.job.queue.name</name>
                    <value>${queueName}</value>
                </property>
            </configuration>
            <main-class>org.apache.oozie.example.DemoJavaMain</main-class>
            <arg>Hello</arg>
            <arg>Oozie!</arg>
        </java>
        <ok to="check-flume-input-node"/>
        <error to="fail"/>
    </action>

    <decision name="check-flume-input-node">
        <switch>
            <case to="shell-node">${fs:fileSize(concat(nameNode, '/user/flume/project/sda/spider/user')) gt 1 * KB}</case>
            <default to="end"/>
        </switch>
    </decision>

    <action name="shell-node">
        <shell xmlns="uri:oozie:shell-action:0.2">
            <job-tracker>${jobTracker}</job-tracker>
            <name-node>${nameNode}</name-node>
            <configuration>
                <property>
                    <name>mapred.job.queue.name</name>
                    <value>${queueName}</value>
                </property>
            </configuration>
            <exec>move-data.sh</exec>
            <file>script/shell/move-data.sh</file>
            <capture-output/>
        </shell>
        <ok to="hive2-user-add-node"/>
        <error to="fail"/>
    </action>

    <action name="hive2-user-add-node">
        <hive2 xmlns="uri:oozie:hive2-action:0.1">
            <job-tracker>${jobTracker}</job-tracker>
            <name-node>${nameNode}</name-node>
            <configuration>
                <property>
                    <name>mapred.job.queue.name</name>
                    <value>${queueName}</value>
                </property>
            </configuration>
            <jdbc-url>${jdbcURL}</jdbc-url>
            <script>script/hive/user-add.q</script>
            <param>INPUT=/user/flume/project/test_table</param>
            <!--<param>OUTPUT=/user/${wf:user()}/${examplesRoot}/output-data/hive2</param>-->
        </hive2>
        <ok to="hive2-user-duplicate-remove-node"/>
        <error to="fail"/>
    </action>

    <action name="hive2-user-duplicate-remove-node">
        <hive2 xmlns="uri:oozie:hive2-action:0.1">
            <job-tracker>${jobTracker}</job-tracker>
            <name-node>${nameNode}</name-node>
            <configuration>
                <property>
                    <name>mapred.job.queue.name</name>
                    <value>${queueName}</value>
                </property>
            </configuration>
            <jdbc-url>${jdbcURL}</jdbc-url>
            <script>script/hive/user-duplicate-remove.q</script>
        </hive2>
        <ok to="end"/>
        <error to="fail"/>
    </action>

    <kill name="fail">
        <message>Java failed, error message[${wf:errorMessage(wf:lastErrorNode())}]</message>
    </kill>
    <end name="end"/>
</workflow-app>